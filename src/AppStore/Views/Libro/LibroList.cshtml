@model AppStore.Models.DTO.LibroListVm;
@{
    Layout = "_Layout";
}

<div class="tbl-container">
    <h2>Administracion de libros</h2>
    <table>
        <tr>
            <th>Titulo</th>
            <th>Categoria</th>
            <th>Fecha publicacion</th>
            <th>Imagen</th>
            <th>Autor</th>
            <th>Accion</th>
        </tr>
        @foreach (var item in Model.LibroList!)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Categorias</td>
                <td>@item.CreateDate</td>
                <td><img src="/Uploads/@item.Imagen" alt="@item.Titulo" style="height: 60px; width: 80px;"/></td>
                <td>@item.Autor</td>
                <td>
                    <a href="/Libro/Edit?id=@item.Id" class="btn btn-default">
                    <i class="fa fa-edit"></i>
                    </a>

                     <a href="/Libro/Delete?id=@item.Id" onclick="return window.confirm('Â¿Esta seguro?')" class="btn btn-danger">
                    <i class="fa fa-trash"></i>
                    </a>
                    
                </td>
            </tr>
        }

    </table>
    <div class="input-container">
        <a href="/Libro/Add" class="btn btn-sec">Atras</a>

    </div>
</div>